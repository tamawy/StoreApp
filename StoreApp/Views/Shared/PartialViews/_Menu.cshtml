@model IEnumerable<StoreApp.Helpers.MenuItem>

<div class="dropup"> 
    <button class="dropbtn"><i class='fas fa-align-justify fa-lg dropbtn'></i></button>
    <div class="dropup-content">
        @{
            foreach (var item in Model)
            {
                <a onclick="@item.OnClickFunction"><i class="@item.FontAwesomeIcon"></i>@item.DisplayName</a>
            }
        }
    </div>
</div>

<style>
    .dropbtn {
        background-color: #3498DB;
        color: white;
        font-size: 16px;
        border: none;
    }

    .dropup {
        position: relative;
        display: inline-block;
    }

    .dropup-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 100px;
        z-index: 1;
    }

   .dropup-content a {
       color: black;
       padding: 12px 16px;
       text-decoration: none;
       display: block;
   }

   .dropup-content a:hover {
       background-color: #ccc
   }

    .dropup:hover .dropup-content {
        display: block;
    }

    .dropup:hover .dropbtn {
        background-color: #2980B9;
    }
</style>

