@model StoreApp.DAL.Store
<div class="grid-container">
    <div class="grid-item">@Html.LabelFor(model => model.Name, new { @class = "form-label" })</div>
    <div class="grid-item">@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })</div>
    <div class="grid-item"></div>

    <div class="grid-item">@Html.LabelFor(s => s.IsMain, new { @class = "form-label" })</div>
    <div class="grid-item">@Html.EditorFor(s => s.IsMain, new { @class = "form-check-input" })</div>
    <div class="grid-item"></div>

    <div class="grid-item">@Html.LabelFor(s => s.IsInvoiceDirect, new { @class = "form-label" })</div>
    <div class="grid-item">@Html.EditorFor(s => s.IsInvoiceDirect, new { @class = "form-check-input" })</div>
    <div class="grid-item"> <button class="btn btn-primary">Search</button>
    </div>
</div>

<style>
    .grid-container {
        margin: 20px;
        display: grid;
        align-items: center;
        grid-template-columns: 200px 800px 200px;
    }

    .grid-item {
        text-align: start;
        padding: 2px;
    }
</style>
