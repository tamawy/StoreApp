@model StoreApp.DAL.Store

@using (Html.BeginForm(actionName: "Create", controllerName:"Stores"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="col-md-10">
            @Html.LabelFor(model => model.Name, new { @class = "form-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(s => s.IsMain, new { @class = "form-label" })
            @Html.CheckBoxFor(s => s.IsMain, new { @class = "form-check-input" })
            @Html.ValidationMessageFor(s => s.IsMain, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(s => s.IsInvoiceDirect, new { @class = "form-label" })
            @Html.CheckBoxFor(s => s.IsInvoiceDirect, new { @class = "form-check-input" })
            @Html.ValidationMessageFor(s => s.IsInvoiceDirect, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(s => s.Address, new { @class = "form-label" })
            @Html.TextAreaFor(s => s.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Address, "", new { @class = "text-danger" })
        </div>

        <div>
            <br />
            <button class="btn btn-success" type="submit">Save</button>
        </div>
    </div>
}
@Scripts.Render("~/bundles/jqueryval")